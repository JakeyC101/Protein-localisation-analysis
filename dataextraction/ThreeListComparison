# This function compares the members of three lists in the form of .txt files and generates another list consisting only of the shared members of all lists

def ListCompare():
    listdict = {}
    for i in (1,2,3):
        openfile = open(input('File location: '))
        genelist = openfile.readlines()
        genelistformatted = [x.replace("\n", "") for x in genelist]
        listdict[i] = genelistformatted
    sharedlist = set(listdict[1]).intersection(listdict[2], listdict[3])
    outputfile = open(input('Shared list destination: '), 'w')
    outputfile.write('\n'.join(list(sharedlist)))

ListCompare()
